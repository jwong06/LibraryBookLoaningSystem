@using Microsoft.AspNetCore.Html
@model LibraryBookLoaningSystem.Models.WeatherAPI
@{
    ViewData["Title"] = "Weather";
}

<h1>Weather Forecast</h1>
@using (Html.BeginForm())
{
}
<div id="apiDiv">
    <h4>Select a City for the Current Weather Forecast</h4>
    @using (Html.BeginForm())
    {
        foreach (var city in Model.cities)
        {
            <span>
                @Html.RadioButtonFor(m => m.cities, city.Value, new { @class = "form-check-input" }) @city.Key
            </span>
        }

        <div><button class="btn btn-primary" name="submit">Submit</button></div>
    }
    <div id="message">@(new HtmlString(Model.apiResponse))</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("input[id='cities']").change(function () {
            $(this).parents("#apiDiv").find
                ("span").css("background", "none");
            $(this).parent().css("background", "#4CAF50");
        });
    });
</script>
