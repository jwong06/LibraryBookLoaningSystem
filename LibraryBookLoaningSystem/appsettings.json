{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=LibraryBookLoaningSystem;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Secret": "1234567890abcdef"
  },
  "NLog": {
    "autoReload": true,
    "internalLogLevel": "Info",
    "internalLogFile": "C:\\Desktop\\MyLogFile.txt",
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "all_logs_file": {
        "type": "File",
        "fileName": "c:\\logs\\all.log"
      },
      "important_logs_file": {
        "type": "File",
        "fileName": "c:\\logs\\important.log"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "maxLevel": "Debug",
        "writeTo": "all_logs_file"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "important_logs_file"
      }
    ]
  }

}
